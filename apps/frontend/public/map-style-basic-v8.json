{
    "version": 8,
    "name": "Simple Countries",
    "metadata": {},
    "sources": {
        "carto": {
            "type": "vector",
            "url": "https://tiles.basemaps.cartocdn.com/vector/carto.streets/v1/tiles.json"
        }
    },
    "sprite": "https://tiles.basemaps.cartocdn.com/gl/positron-gl-style/sprite",
    "glyphs": "https://tiles.basemaps.cartocdn.com/fonts/{fontstack}/{range}.pbf",
    "layers": [
        {
            "id": "background",
            "type": "background",
            "layout": {
                "visibility": "visible"
            },
            "paint": {
                "background-color": "#c4a55b",
                "background-opacity": 1
            }
        },
        {
            "id": "water",
            "type": "fill",
            "source": "carto",
            "source-layer": "water",
            "minzoom": 0,
            "maxzoom": 10,
            "filter": [
                "all",
                [
                    "==",
                    "$type",
                    "Polygon"
                ]
            ],
            "layout": {
                "visibility": "visible"
            },
            "paint": {
                "fill-color": "#a8c4e0",
                "fill-antialias": true,
                "fill-opacity": 1
            }
        },
        {
            "id": "boundary_country_outline",
            "type": "line",
            "source": "carto",
            "source-layer": "boundary",
            "minzoom": 0,
            "maxzoom": 24,
            "filter": [
                "all",
                [
                    "==",
                    "admin_level",
                    2
                ],
                [
                    "==",
                    "maritime",
                    0
                ]
            ],
            "layout": {
                "line-cap": "round",
                "line-join": "round"
            },
            "paint": {
                "line-color": "#000000",
                "line-opacity": 1,
                "line-width": 0.75
            }
        },
        {
            "id": "place_country_2",
            "type": "symbol",
            "source": "carto",
            "source-layer": "place",
            "minzoom": 3,
            "maxzoom": 10,
            "filter": [
                "all",
                [
                    "==",
                    "class",
                    "country"
                ],
                [
                    ">=",
                    "rank",
                    3
                ],
                [
                    "has",
                    "iso_a2"
                ]
            ],
            "layout": {
                "text-field": "{name_en}",
                "text-font": [
                    "Montserrat Medium",
                    "Open Sans Bold",
                    "Noto Sans Regular",
                    "HanWangHeiLight Regular",
                    "NanumBarunGothic Regular"
                ],
                "text-size": {
                    "stops": [
                        [
                            3,
                            10
                        ],
                        [
                            5,
                            11
                        ],
                        [
                            6,
                            12
                        ],
                        [
                            7,
                            13
                        ],
                        [
                            8,
                            14
                        ]
                    ]
                },
                "text-transform": "uppercase"
            },
            "paint": {
                "text-color": "#000000",
                "text-halo-color": "#c4a55b",
                "text-halo-width": 1.5
            }
        },
        {
            "id": "place_country_1",
            "type": "symbol",
            "source": "carto",
            "source-layer": "place",
            "minzoom": 2,
            "maxzoom": 7,
            "filter": [
                "all",
                [
                    "==",
                    "class",
                    "country"
                ],
                [
                    "<=",
                    "rank",
                    2
                ]
            ],
            "layout": {
                "text-field": "{name_en}",
                "text-font": [
                    "Montserrat Medium",
                    "Open Sans Bold",
                    "Noto Sans Regular",
                    "HanWangHeiLight Regular",
                    "NanumBarunGothic Regular"
                ],
                "text-size": {
                    "stops": [
                        [
                            2,
                            10
                        ],
                        [
                            3,
                            11
                        ],
                        [
                            4,
                            12
                        ],
                        [
                            5,
                            14
                        ],
                        [
                            6,
                            16
                        ]
                    ]
                },
                "text-transform": "uppercase"
            },
            "paint": {
                "text-color": "#000000",
                "text-halo-color": "#c4a55b",
                "text-halo-width": 2
            }
        }
    ]
}
